{
  "name": "url_shortner",
  "version": "1.0.0",
  "description": "Backend API for Url Shortener app",
  "main": "build/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "npm run build && node build/index.js",
    "start:dev": "nodemon --config \"./util/nodemon.json\"",
    "server": "nodemon ./build/index.js",
    "client": "npm start --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watchAll --verbose --runInBand --detectOpenHandles --colors",
    "build": "rm -rf ./build/ && tsc"
  },
  "author": "Apetsi Ampiah",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.7.4",
    "@overnightjs/logger": "^1.1.12",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/mongoose": "^5.7.32",
    "@types/uuid": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.23",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.24",
    "@types/supertest": "^2.0.10",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2"
  },
  "jest": {
    "roots": ["<rootDir>/src"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/client"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
